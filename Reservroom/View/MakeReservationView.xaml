<UserControl x:Class="Reservroom.View.MakeReservationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reservroom.View" xmlns:viewmodels="clr-namespace:Reservroom.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MakeReservationViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Make a Reservation" 
            Style="{StaticResource Header}"/>

        <Grid Grid.Row="1" Margin="0 25 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock 
                Grid.Row="0"
                Text="Username:" 
                FontSize="16" 
                Margin="10"/>
            <TextBox 
                Grid.Row="1"
                Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                FontSize="16" 
                Margin="0 5 0 0"/>
            <!-- left top right bottom -->
        </Grid>

        <Grid Grid.Row="2" Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="FirstCol"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="SecondCol"/>
            </Grid.ColumnDefinitions>
            <TextBlock 
                Grid.Row="0"
                Grid.Column="0"
                Text="Floor No." 
                FontSize="16" 
                Margin="10"/>
            <TextBox 
                Grid.Row="1"
                Grid.Column="0"
                Text="{Binding FloorNumber, UpdateSourceTrigger=PropertyChanged}" 
                FontSize="16" 
                Margin="0 5 0 0"/>

            <TextBlock 
                Grid.Row="0"
                Grid.Column="1"
                Text="Room No." 
                FontSize="16" 
                Margin="10"/>
            <TextBox 
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding RoomNumber, UpdateSourceTrigger=PropertyChanged}" 
                FontSize="16" 
                Margin="10 5 0 0"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="FirstCol"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="SecondCol"/>
            </Grid.ColumnDefinitions>
            <TextBlock 
                Grid.Row="0"
                Grid.Column="0"
                Text="Start Date" 
                FontSize="16" 
                Margin="10"/>
            <DatePicker 
                Grid.Row="1"
                Grid.Column="0"
                SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}"
                FontSize="16" 
                Margin="0 5 0 0"/>

            <TextBlock 
                Grid.Row="0"
                Grid.Column="1"
                Text="End Date" 
                FontSize="16" 
                Margin="10"/>
            <DatePicker 
                Grid.Row="1"
                Grid.Column="1"
                SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}"
                FontSize="16" 
                Margin="10 5 0 0"/>
        </Grid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0 25 0 0">
            <Button Content="Submit" Command="{Binding SubmitCommand}"/>
            <Button Content="Cancel" Margin="10 0 0 0" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
